// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id                   String   @id @default(uuid())
  githubId             Int?     @unique
  githubInstallationId String?
  email                String?  @unique
  username             String   @unique
  passwordHash         String?
  apiKey               String?
  apiKeys              ApiKeys? @relation(fields: [apiKey], references: [key])

  createdAt DateTime @db.Date
  updatedAt DateTime @db.Date

  @@index([apiKey], name: "ApiKey")
}

model ApiKeys {
  key                  String   @id @unique @default(uuid())
  githubId             Int?     @unique
  githubInstallationId String?  @unique
  repoName             String?
  contractAddress      String?
  contractAbi          String?  @db.Text
  keyTier              KeyTier
  expires              DateTime
  createdAt            DateTime @db.Date
  updatedAt            DateTime @db.Date
  User                 User[]

  @@index([githubId], name: "GithubId")
}

enum KeyTier {
  FREE
  PERSONAL
  PRO
}

model AlphaAccessKeys {
  alphaKey  String         @id @unique @default(uuid())
  keyStatus AlphaKeyStatus @default(UNUSED)
  issuedTo  String
}

enum AlphaKeyStatus {
  UNUSED
  USED
}
