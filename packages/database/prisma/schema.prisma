// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id                   String  @id @default(uuid())
  email                String? @unique
  username             String  @unique
  passwordHash         String?
  githubId             Int?    @unique
  githubInstallationId String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  ApiKey     ApiKey?
  Repository Repository?
}

model ApiKey {
  key            String   @id @unique @default(uuid())
  userId         String   @unique
  associatedUser User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  keyTier        KeyTier
  expires        DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([userId], name: "UserId")
}

model Repository {
  id              String  @id @unique @default(uuid())
  name            String
  userId          String  @unique
  associatedUser  User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  contractAddress String?
  contractAbi     String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([userId], name: "UserId")
}

enum KeyTier {
  FREE
  PERSONAL
  PRO
}

model AlphaAccessKeys {
  alphaKey  String         @id @unique @default(uuid())
  keyStatus AlphaKeyStatus @default(UNUSED)
  issuedTo  String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum AlphaKeyStatus {
  UNUSED
  USED
}
